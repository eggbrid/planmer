<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_bg_color"
        android:orientation="vertical">

    <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:text="登录"
            android:textColor="@color/colorffffff"
            android:textSize="20dp" />

    <LinearLayout
            android:id="@+id/llUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tvLogin"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_bg_normal"
            android:orientation="horizontal">
        <!--        <ImageView android:layout_width="40dp"-->
        <!--                   android:layout_height="wrap_content"-->
        <!--                   android:src="@mipmap/ic_username"-->
        <!--                   android:layout_margin="10dp"/>-->
        <!--        <View android:layout_width="0.5dp"-->
        <!--              android:layout_height="match_parent"-->
        <!--              android:layout_marginTop="10dp"-->
        <!--              android:layout_marginBottom="10dp"-->
        <!--              android:layout_marginRight="10dp"-->
        <!--              android:background="@color/app_color"-->
        <!--        />-->
        <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/colorffffffff"
                android:hint="请输入用户名"
                android:textColor="@color/app_text_color_black"
                android:textColorHint="@color/app_color_light_text"
                android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llPassWord"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/llUserName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_edit_bg_normal"
            android:orientation="horizontal">
        <!--        <ImageView android:layout_width="40dp"-->
        <!--                   android:layout_height="wrap_content"-->
        <!--                   android:src="@mipmap/ic_password"-->
        <!--                   android:layout_margin="10dp"/>-->
        <!--        <View android:layout_width="0.5dp" android:layout_height="match_parent"-->
        <!--              android:layout_marginTop="10dp"-->
        <!--              android:layout_marginBottom="10dp"-->
        <!--              android:layout_marginRight="10dp"-->
        <!--              android:background="@color/app_color"-->
        <!--        />-->
        <EditText
                android:id="@+id/edtPassWord"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@color/colorffffffff"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:textColor="@color/app_text_color_black"
                android:textColorHint="@color/app_color_light_text"
                android:textSize="12dp" />

    </LinearLayout>

    <TextView
            android:id="@+id/tvLoginBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/llPassWord"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/selector_btn_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/app_text_color"
            android:textSize="18dp" />


    <TextView
            android:id="@+id/tvToRegister"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_below="@+id/tvLoginBtn"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="去注册"
            android:textColor="@color/app_color"
            android:textSize="15dp" />
</RelativeLayout>