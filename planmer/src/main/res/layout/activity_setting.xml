<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <kirito.peoject.baselib.UI.widget.CommentTitleView
            android:layout_width="match_parent"
            android:id="@+id/title"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvClearCache"
            android:layout_width="match_parent" android:layout_height="55dp"
            android:text="清除缓存"
            android:textColor="@color/app_text_color"
            android:textSize="14dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"

    />
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/app_normal_color"/>

    <TextView
            android:id="@+id/tvVersion"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="版本说明"
            android:textColor="@color/app_text_color"
            android:textSize="14dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"

    />
    <View android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/app_normal_color"/>

    <TextView
            android:id="@+id/tvAboutApp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="关于计划猫"
            android:textColor="@color/app_text_color"
            android:textSize="14dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"

    />
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/app_normal_color"/>

    <TextView
            android:id="@+id/tvAboutDev"
            android:layout_width="match_parent" android:layout_height="55dp"
            android:text="关于开发者"
            android:textColor="@color/app_text_color"
            android:textSize="14dp"
            android:padding="10dp"
            android:drawableRight="@drawable/ic_next"
            android:gravity="center_vertical"

    />
    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/app_normal_color"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView

                android:id="@+id/tvLoginOut"
                android:layout_width="match_parent" android:layout_height="50dp"
                  android:layout_alignParentBottom="true"
                  android:layout_margin="10dp"
                  android:textColor="@color/colorffffff"
                  android:textSize="15dp"
                  android:gravity="center"
                  android:background="@drawable/selector_btn_bg"
                  android:text="退出登录"/>

    </RelativeLayout>
</LinearLayout>